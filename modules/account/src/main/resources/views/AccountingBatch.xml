<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_6.0.xsd">
  
	<grid model="com.axelor.account.db.AccountingBatch" title="Accounting batch" name="accounting-batch-grid">
		<field name="code"/>
		<field name="action"/>
	</grid>
	
	<form model="com.axelor.account.db.AccountingBatch" title="Accounting batch" name="accounting-batch-form">
		<panel title="Overview" name="accountingBatchPanel">
			<field name="code"/>
			<field name="actionSelect"/>
			<panel-related field="batchList" canNew="false" colSpan="12"/>
		</panel>
		<panel sidebar="true" name="accountingBatchSidePanel">
			<button onClick="save,action-accounting-batch-method-get-validated-invoice" name="start" showIf="actionSelect == '0'" title="Start" />
		</panel>
	</form>
	
	<action-method name="action-accounting-batch-method-get-validated-invoice">
		<call class="com.axelor.account.web.AccountingBatchController" method="generateBatches"/>
	</action-method>
  </object-views>