<?xml version="1.0" encoding="UTF-8"?>
<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/domain-models
  https://axelor.com/xml/ns/domain-models/domain-models_6.0.xsd">

	<module package="com.axelor.contact.db" name="contact" />
	<entity name="Address" >
		<string name="numberAndStreet" required="true" title="N* / Street"/>
		<string name="zip" required="true" />
		<string name="city" required="true" />
		<many-to-one ref="com.axelor.contact.db.Country" name="country"/>
		<string name="fullName" namecolumn="true" search="zip,numberAndStreet,city" formula="true">
            <![CDATA[
            CASE
                WHEN zip IS NULL OR number_and_street IS NULL OR city IS NULL THEN ''
                ELSE 'zip: ' || zip || ' Number & Street: ' || number_and_street || ' City: ' || city
            END
            ]]>
        </string>
		
		
	</entity>


</domain-models>
